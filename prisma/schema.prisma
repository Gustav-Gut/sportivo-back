generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model School {
  id            String         @id @default(uuid())
  name          String
  slug          String         @unique
  address       String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  active        Boolean        @default(true)
  users         User[]
  students      Student[]
  plans         Plan[]
  subscriptions Subscription[]
  payments      Payment[]
}

model User {
  id        String   @id @default(uuid())
  rut       String
  firstName String
  lastName  String
  email     String
  phone     String?
  password  String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  schoolId  String
  role      Role     @default(ADMIN)
  school    School   @relation(fields: [schoolId], references: [id])

  @@unique([rut, schoolId])
  @@unique([email, schoolId])
}

model Student {
  id           String        @id @default(uuid())
  rut          String
  firstName    String
  lastName     String
  email        String
  phone        String?
  active       Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  schoolId     String
  payments     Payment[]
  subscription Subscription?
  school       School        @relation(fields: [schoolId], references: [id])

  @@unique([rut, schoolId])
  @@unique([email, schoolId])
}

model Plan {
  id             String         @id @default(uuid())
  name           String
  description    String
  price          Float
  durationMonths Int            @default(1)
  active         Boolean        @default(true)
  createdAt      DateTime       @default(now())
  schoolId       String
  subscriptions  Subscription[]
  school         School         @relation(fields: [schoolId], references: [id])

  @@unique([name, schoolId])
}

model Subscription {
  id         String             @id @default(uuid())
  planId     String
  provider   PaymentProvider
  externalId String?
  startDate  DateTime           @default(now())
  endDate    DateTime?
  studentId  String             @unique
  schoolId   String
  status     SubscriptionStatus @default(PENDING)
  school     School             @relation(fields: [schoolId], references: [id])
  student    Student            @relation(fields: [studentId], references: [id])
  plan       Plan               @relation(fields: [planId], references: [id])
}

model Payment {
  id         String          @id @default(uuid())
  amount     Float
  currency   String          @default("CLP")
  provider   PaymentProvider
  externalId String?
  status     PaymentStatus   @default(PENDING)
  createdAt  DateTime        @default(now())
  studentId  String
  schoolId   String
  school     School          @relation(fields: [schoolId], references: [id])
  student    Student         @relation(fields: [studentId], references: [id])
}

enum Role {
  SUPERADMIN
  ADMIN
  COACH
}

enum SubscriptionStatus {
  PENDING
  ACTIVE
  CANCELLED
  PAST_DUE
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

enum PaymentProvider {
  MERCADOPAGO
  TOKU
  PAYPAL
  STRIPE
}
